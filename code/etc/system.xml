<config>
  <tabs>
    <nls translate="label" module="geckoboard">
      <label>Nls</label>
      <sort_order>100</sort_order>
    </nls>
  </tabs>
  <sections>
    <nlsgeckoboard translate="label" module="geckoboard">
      <label>Geckoboard</label>
      <tab>nls</tab>
      <sort_order>1000</sort_order>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>
      <groups>
        <geckoboard translate="label" module="geckoboard">
          <label>Geckoboard configuration</label>
          <frontend_type>text</frontend_type>
          <sort_order>1</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <expanded>1</expanded>
          <fields>
            <apikey translate="label">
              <label>API Token key : </label>
              <comment></comment>
              <frontend_type>text</frontend_type>
              <sort_order>20</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </apikey>
            <baseurl translate="label">
              <label>Url de push : </label>
              <comment></comment>
              <frontend_type>text</frontend_type>
              <sort_order>20</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </baseurl>
            <order_status translate="label">
              <label>Valid order status</label>
              <frontend_type>multiselect</frontend_type>
              <source_model>adminhtml/system_config_source_order_status</source_model>
              <sort_order>30</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </order_status>
            <pending_order_status translate="label">
              <label>Pending order status</label>
              <frontend_type>multiselect</frontend_type>
              <source_model>adminhtml/system_config_source_order_status</source_model>
              <sort_order>40</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </pending_order_status>
          </fields>
        </geckoboard>
        <geckoboard_widgets translate="label" module="geckoboard">
          <label>Widgets IDs</label>
          <expanded>1</expanded>
          <frontend_type>text</frontend_type>
          <sort_order>2</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <dailyturnover_widget translate="label">
              <label>Daily turnover : </label>
              <comment>Send today &amp; yesterday turnovers (Number widget)</comment>
              <frontend_type>text</frontend_type>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </dailyturnover_widget>
            <monthlyturnover_widget translate="label">
              <label>Monthly turnover : </label>
              <comment>Send this month &amp; last month turnovers (Number widget)</comment>
              <frontend_type>text</frontend_type>
              <sort_order>2</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </monthlyturnover_widget>
            <orderscount_widget translate="label">
              <label>Orders count : </label>
              <comment>Send orders count (Number &amp; graph widget)</comment>
              <frontend_type>text</frontend_type>
              <sort_order>3</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </orderscount_widget>
            <orderspendingcount_widget translate="label">
              <label>Pending orders : </label>
              <comment>Send pending orders count (Number widget)</comment>
              <frontend_type>text</frontend_type>
              <sort_order>4</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </orderspendingcount_widget>
            <lastorder_widget translate="label">
              <label>Last order : </label>
              <comment>Send last order details (Text widget)</comment>
              <frontend_type>text</frontend_type>
              <sort_order>5</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </lastorder_widget>
            <subscribers_widget translate="label">
              <label>Newsletters subscribers : </label>
              <comment>Send newsletters subscribers (Number &amp; graph widget)</comment>
              <frontend_type>text</frontend_type>
              <sort_order>6</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </subscribers_widget>
          </fields>
        </geckoboard_widgets>

      </groups>
    </nlsgeckoboard>
  </sections>
</config>
